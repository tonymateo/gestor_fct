    <body>
        <style media="screen">
            h1,
            label,
            p {
                color: white;
            }

        </style>

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Login
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <form action="{{ path('login') }}" method="post">
            <div class="formulario">
                <div class="form-group">
                    <label for="username" class="col-sm-3 control-label">Usuario</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
                    {% if error %}
                        <div class="text-danger">{{ error.message }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Contrase√±a</label>
                    <input type="password" class="form-control" id="password" name="_password">
                    {% if error %}
                        <div class="text-danger">{{ error.message }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                        <div class="checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" checked />
                            <label for="remember_me">Recuerdame</label>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_target_path" value="all_profesores" />

                <div class="botones">
                    <button class="btn btn-success" type="submit" name="button">Log in</button>
                    <a class="btn btn-info" href="/registro">Registrarse</a>
                </div>
            </div>
        </form>
    </body>
