{% extends 'base.html.twig' %}
{% block body %}
  <!-- Page Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              Usuarios
          </h1>
      </div>
  </div>
  <!-- /.row -->
  <table>
        <tbody>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Quitar rol</th>
            <th>Añadir rol</th>
          </tr>
          <p>

          </p>
          {% for user in users %}
          <form method="post">
            <tr>
              <td>{{ user.id }}</td>
              <td>{{ user.username }}</td>
              <td style="text-align: left;">{% for rol in user.roles %}
                  <span>{{rol}}</span><br>
                {% endfor %}
              </td>
              <td>
                <select class="" name="quitarRol">
                    <option value=""></option>
                  {% for rol in user.roles %}
                    <option value="">{{rol}}</option>
                  {% endfor %}
                </select>
              </td>
              <td>
                <select class="" name="añadirRol">
                  <option value=""></option>
                  <option value="ROLE_USER">ROLE_USER</option>
                  <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                  <option value="ROLE_SUPER_ADMIN">ROLE_SUPER_ADMIN</option>
                </select>
              </td>
              <td><button class="btn btn-primary" type="submit" name="button">Confirmar</button></td>
              <td><button class="btn btn-danger" type="reset" name="button">Borrar</button></td>
            </tr>
          </form>
          {% endfor %}
        </tbody>
      </table>

      <div class="col-md-12">

      </div>
{% endblock %}
